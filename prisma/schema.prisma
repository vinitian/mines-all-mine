generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator json {
  provider = "prisma-json-types-generator"
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  name      String
  img_url   String
  win_count Int    @default(0)
}

model Room {
  id             Int     @id @default(autoincrement())
  name           String
  host_id        String     @unique
  player_id_list String[]
  size           Int     @default(8)
  player_limit   Int     @default(5)
  bomb_count     Int     @default(10)
  chat_enabled   Boolean @default(true)
  timer          Int     @default(0)   
  game_started   Boolean @default(false)
  /// [PlacementType]
  placement      Json[]   @default([])
}
